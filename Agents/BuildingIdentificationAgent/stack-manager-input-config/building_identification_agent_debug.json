{
    "ServiceSpec": {
        "Name": "building_identification_agent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "building_identification_agent:2.0.0",
                "Env": [
                    "JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
                ],
                "Configs": [
                    {
                        "ConfigName": "blazegraph"
                    },
                    {
                        "ConfigName": "postgis"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    }
                ]
            }
        },
        "EndpointSpec": {
            "Ports": [
                {
                    "Name": "web",
                    "Protocol": "tcp",
                    "TargetPort": "5005",
                    "PublishedPort": "5005"
                }
            ]
        }
    },
    "endpoints": {
        "building_identification_agent": {
            "url": "http://localhost:8080/building_identification_agent/",
            "externalPath": "/building_identification_agent/"
        }
    }
}